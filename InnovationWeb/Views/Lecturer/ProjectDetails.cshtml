@model BusinessObjects.Project

<h2>@Model.Title</h2>

<p><strong>Team Name:</strong> @Model.Team.TeamName</p>
<p><strong>Description:</strong> @Model.Summary</p>

<h3>Score Project</h3>

<form method="post" action="@Url.Action("ScoreProject", "Lecturer")">
    <div class="form-group">
        <label for="Score">Score</label>
        <input type="number" id="Score" name="score" class="form-control" min="0" max="100" required />
    </div>
    <div class="form-group">
        <label for="Comment">Comment</label>
        <textarea id="Comment" name="comment" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit Score</button>
    <input type="hidden" name="projectId" value="@Model.Id" />
</form>